<div class="row"><aside class="col-md-6">
  <div class="row">
    <aside class="col-md-12">
      <section class="user_info">
        <h1>
          Candidaturas
        </h1>
        <%= render @offers_candidature %>
        <%= will_paginate @offers_candidature %>
      </section>
    </aside>
    <aside class="col-md-12">
      <section class="entity_interest">
        <h1>
          Empresas interessadas em mim
        </h1>
        <%= render @followers %>
      </section>
    </aside>
  </div>

</aside>
  <aside class="col-md-6">
    <div class="row">
      <aside class="col-md-12">
        <section class="user_edit">
          <h1>
            <%= @user.name %>
          </h1>
          <%= link_to "Editar dados", users_edit_path(@user), class: 'btn btn-default' %>
          <%= link_to "Alterar password", edit_password_path(@user), class: 'btn btn-default' %>
          <div class="prof_img">
            <%= image_tag @user.picture? ? @user.picture.url : 'default_avatar.png' %>
          </div>
        </section>
      </aside>
    </div>
  </aside>

</div>