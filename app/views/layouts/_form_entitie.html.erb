<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <div>
      <div class="row" id="login_candidate_info">
        <div class="col-md-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-md-3"><%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.hidden_field :entitie, value: true %>

        <div class="col-md-3"><%= f.label :password_confirmation, "Confirmação" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <hr>
      <div id="info_candidate">
        <div class="row">
          <div class="col-md-6 col ">
            <%= f.label :name, "Nome Empresa" %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :address, "Morada" %>
            <%= f.text_area :address, class: 'form-control' %>
          </div>
          <div class="col-md-3">
            <%= f.label :postal_code, "Código Postal" %>
            <%= f.text_field :postal_code, class: 'form-control' %>
          </div>
          <div class="col-md-3">
            <%= f.label :locality, "Localidade" %>
            <%= f.text_field :locality, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <%= f.label :phone, "Telefone" %>
            <%= f.telephone_field :phone, class: 'form-control' %>
          </div>
          <div class="col-md-3">
            <%= f.label :cellphone, "Telemóvel" %>
            <%= f.telephone_field :cellphone, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <%= f.label :page, "Página" %>
            <%= f.text_field :page, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <%= f.label :idnum, "NIF" %>
            <%= f.text_field :idnum, class: 'form-control' %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-3">
            <%= f.label :prof_area, "Atividade Profissional" %>
            <%= f.select(:prof_area, options_for_select([['Informática',1],['Educação',2]])) %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label :presentation, "Apresentação" %>
            <%= f.text_area :presentation, class: 'form-control' %>
          </div>
        </div>

      </div>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
<% end %>