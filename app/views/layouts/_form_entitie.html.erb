<%= simple_form_for(@user, html: {multipart: true}) do |f| %>
    <div>
      <% if yield(:data) == 'register'%>
          <div class="row" id="login_candidate_info">
            <div class="col-md-6">
              <%= f.input :email %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :password %>
            </div>
            <%= f.hidden_field :entitie, value: '2' %>
            <div class="col-md-6">
              <%= f.input :password_confirmation, label: "Confirmação da Password" %>
            </div>
          </div>
          <hr>
      <% end %>
      <% if yield(:data) == 'register' || params[:data] == 'edit' %>
          <div id="info_candidate" class="profile">
            <%= render 'layouts/form_personal_data', :f => f %>
            <div class="row">
              <div class="col-md-2">
                <%= f.input :idnum, label: yield(:idnumber) %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-2">
                <%= f.input :prof_area, label: "Atividade Profissional",collection: (['Informática','Educação','Saúde','Metalúrgica','Prestação de Serviços']) %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= f.input :presentation, as: :text, label:  "Apresentação", placeholder: 'Descrição da empresa (max. 140 carácteres)' %>
            </div>
          </div>
      <% end %>
      <div class="col-md-2">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    </div>
<% end %>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('O tamanho máximo é de 5MB. Por favor escolha uma imagem mais pequena.');
    }
  });


</script>
