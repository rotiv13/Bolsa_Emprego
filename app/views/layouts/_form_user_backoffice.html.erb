<%= form_for @user do |f| %>
    <div>
      <div id="new_info">
        <% if yield(:data) != 'password' %>
            <div class="row">
              <div class="col-md-6 ">
                <%= f.label :name, "Nome" %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="col-md-6">
                <%= f.label :entitie, "Tipo" %>
                <% if @user.entitie %>
                    <%= f.hidden_field :entitie, value: @user.entitie %>
                <% else %>
                    <%= f.hidden_field :entitie, value: 0 %>
                <% end %>
                <p><%= type(@user) %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <%= f.label :email, "Email" %>
                <%= f.email_field :email, class: 'form-control',placeholder: 'Example: example@example.com' %>
              </div>
              <% if @user.password_digest.nil? %>
                  <%= f.hidden_field :password, value: '123456 ' %>
                  <%= f.hidden_field :password_confirmation, value: '123456 ' %>
              <% end %>
              <div class="col-md-6">
                <h5><strong>Activa</strong></h5>
                <br>
                <div class="checkbox col-md-2">
                  <p>
                    <%= f.label :activated do %>
                        Sim <%= f.check_box :activated, {}, 'true', 'false' %>
                        <% if :activated == 'true' %>
                            <% @user.activate %>
                        <% else %>
                            <% @user.deactivate %>
                        <% end %>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>

        <% else %>
            <div class="row">
              <div class="col-md-6 ">
                <%= f.label :name, "Nome" %>
                <p> <%= @user.name %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 ">
                <%= f.label :password, "Password" %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 ">
                <%= f.label :password_confirmation, "Confirmação da Password" %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
            </div>
        <% end %>
        <div class="row">
          <div class="col-md-2">
            <%= f.submit "Ok", class: "btn btn-primary" %>
          </div>
          <div class="col-md-2">
            <%= link_to "Cancelar", backoffice_path, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>

<% end %>