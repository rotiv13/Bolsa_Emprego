<%= form_for @news do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div>
      <div id="new_info">
        <div class="row">
          <div class="col-md-6 ">
            <%= f.label :title, "Título" %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <%= f.label :date, "Data" %>
            <%= f.text_field :date, 'data-provide' => 'datepicker', class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label :summary, "Sumário da Notícia" %>
            <%= f.text_area :summary, class: 'form-control',placeholder: 'Breve descrição da notícia (max. 140 caracteres)' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label :text, "Texto da Notícia" %>
            <%= f.text_area :text, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <%= f.label :picture, "Imagem" %>
            <%= f.file_field :picture, class:'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <h5><strong>Destaque</strong></h5>
            <br>
            <div class="checkbox">
              <%= f.label :destaque do %>
                  Aparece em destaque <%= f.check_box :destaque, {}, 'true' , 'false' %>
                  <% if :destaque == 'true' %>
                      <% @news.destaque %>
                  <% else %>
                      <% @news.not_destaque %>
                  <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-md-2 col-md-offset-4">
            <h5><strong>Activa</strong></h5>
            <br>
            <div class="checkbox ">
              <%= f.label :active do %>
                  Sim <%= f.check_box :active, {}, 'true', 'false' %>
                  <% if :active == 'true' %>
                      <% @news.activate %>
                  <% else %>
                      <% @news.deactivate %>
                  <% end %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
      <div class="row" style="margin-top: 20px;">
        <div class="col-md-2">
          <%= f.submit "Ok", class: "btn btn-primary" %>

        </div>
        <div class="col-md-2">
          <%= link_to "Cancelar", backoffice_news_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
<% end %>